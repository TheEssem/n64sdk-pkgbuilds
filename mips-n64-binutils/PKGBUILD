# Maintainer: Essem <smswessem@gmail.com>

_target=mips-n64
pkgname=${_target}-binutils
pkgver=2.37
pkgrel=1
pkgdesc="A set of programs to assemble and manipulate binary and object files (${_target})"
url="http://www.gnu.org/software/binutils/"
arch=('x86_64')
license=('GPL')
groups=(n64sdk)
depends=('libelf')
source=("ftp://ftp.gnu.org/gnu/binutils/binutils-${pkgver}.tar.xz")
sha256sums=('820d9724f020a3e69cb337893a0b63c2db161dadcb0e06fc11dc29eb1e84a32c')

build() {
  cd binutils-${pkgver}

  INSTALL_PATH=/opt/crashsdk

  CFLAGS="-O2" CXXFLAGS="-O2" ./configure \
    --disable-debug \
    --enable-checking=release \
    --prefix="$INSTALL_PATH" \
    --target=mips64-elf \
    --with-cpu=mips64vr4300 \
    --program-prefix=mips-n64- \
    --disable-werror

  make
}

check() {
  cd binutils-${pkgver}

  # unset LDFLAGS as testsuite makes assumptions about which ones are active
  # do not abort on errors - manually check log files
  make LDFLAGS="" -k check || true
}

package() {
  cd binutils-${pkgver}
  make DESTDIR="$pkgdir" install-strip

  rm -r "$pkgdir"/opt/crashsdk/share/info
}
